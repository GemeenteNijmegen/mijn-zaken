{{>header}}

<main>
    <!-- START: template component(s) -->
    <div class="container" id="section-1">
        <div class="row">
            <div class="col-12">
            {{#zaak}}
                <h1>{{zaak_type}}</h1>
                <p class="lead">Uw aanvraag met kenmerk <strong>{{id}}</strong> is door ons ontvangen op <strong>{{registratiedatum}}</strong>. De status is <strong>{{status}}</strong>.</p>
                <div class="meta-blocks">
                    <div class="meta-blocks--container">
                        <div class="meta-blocks--content row">
                            <div class="col-xs-12 col-md-4 meta-blocks--col">
                                <h3 class="meta-blocks--content-heading">Aanvraag ontvangen</h3>
                                <p>{{registratiedatum}}</p>
                            </div>
                            <div class="col-xs-12 col-md-4 meta-blocks--col">
                                <h3 class="meta-blocks--content-heading">Status</h3>
                                <p>{{status}}</p>
                            </div>
                            <div class="col-xs-12 col-md-4 meta-blocks--col">
                            {{#einddatum}}
                                <h3 class="meta-blocks--content-heading">Einddatum</h3>
                                <p>{{einddatum}}</p>
                            {{/einddatum}}
                            {{^einddatum}}
                                <h3 class="meta-blocks--content-heading">Verwachtte einddatum</h3>
                                <p>{{verwachtte_einddatum}}</p>
                            {{/einddatum}}
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Het verloop van uw aanvraag</h2>
                <ol class="steps">
                {{#status_list}}
                    {{#current}}
                        <li class="active"><h3><span class="circle">{{volgnummer}}</span>{{name}}</h3>
                        </li>
                    {{/current}}
                    {{^current}}
                        <li><span class="circle">{{volgnummer}}</span>{{name}}</li>
                    {{/current}}
                {{/status_list}}
                </ol>
            {{/zaak}}
            {{^zaak}}
                <h1>Geen zaak gevonden</h1>
                <p>We konden geen zaak vinden met dit kenmerk.</p>
            {{/zaak}}
            </div>
        </div>
    </div>

    <!-- END: template component(s) -->
</main>
{{>footer}}
